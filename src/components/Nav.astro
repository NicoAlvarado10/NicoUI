<nav class="nav-gradient bg-slate-950 sticky top-0 z-50">
    <div class="pt-7 pb-6 flex justify-between items-center max-w-7xl m-auto px-4">
      <a class="text-yellow-50 font-semibold text-3xl" href="/">NicoUI</a>
      <ul class="nav__menu flex items-center gap-8">
        <li>
          <a href="/docs" class="font-medium text-gray-400 text-l transition duration-200 hover:text-cyan-50" aria-label="Documentation">Docs</a>
        </li>
        <li>
          <a href="/#componentes" class="font-medium text-gray-400 text-l duration-200 hover:text-cyan-50" aria-label="Components">Componentes</a>
        </li>
        <li>
          <a href="/#framework" class="font-medium text-gray-400 text-l duration-200 hover:text-cyan-50" aria-label="Frameworks">Frameworks</a>
        </li>
      </ul>
  
      <a class="transition duration-150 text-white hover:scale-110 max-md:hidden" href="https://github.com/NicoAlvarado10/NicoUI" target="_blank" rel="noopener noreferrer" aria-label="GitHub Repository">
        <span class="text-4xl">
          <i class="ri-github-fill"></i>
        </span>
      </a>
  
      <div class="menu-toggle text-white">
        <i class="ri-menu-fill"></i>
      </div>
    </div>
  </nav>
  
  <style>
    .nav-gradient {
      background: linear-gradient(to bottom, #0f172a 0%, #0f172a 25%, #000000 100%);
      border-bottom: 1px solid #9ca3af;
    }
  
    .menu-toggle {
      display: none;
    }
  
    nav {
      position: fixed;
      width: 100%;
      padding-left: 1rem;
      padding-right: 1rem;
      z-index: 100;
    }
  
    @media (max-width: 768px) {
      .menu-toggle {
        display: block;
        font-size: 2rem;
        cursor: pointer;
      }
  
      .nav__menu {
        display: none; /* Oculto por defecto */
        flex-direction: column;
        position: absolute;
        top: 80%; /* Posiciona el men√∫ justo debajo de la barra */
        left: 0;
        width: 100%;
        padding: 1rem;
        background: linear-gradient(to top, #0f172a 0%, #0f172a 25%, #000000 100%);
        border-bottom: 1px solid #9ca3af;
        z-index: 100;
        transition: transform 0.3s ease-in-out;
      }
  
      .nav__menu.active {
        display: flex;
        transform: translateY(0);
      }
    }
  </style>
  
  
  <script >
    const menuToggle = document.querySelector('.menu-toggle');
    const navMenu = document.querySelector('.nav__menu');
  
    // Verificar si los elementos existen antes de agregar los event listeners
    if (menuToggle && navMenu) {
      const menuIcon = menuToggle.querySelector('i');
  
      // Verificar que menuIcon no sea null
      if (menuIcon) {
        menuToggle.addEventListener('click', () => {
          navMenu.classList.toggle('active');
          const isOpen = navMenu.classList.contains('active');
          menuIcon.setAttribute('class', isOpen ? 'ri-close-line' : 'ri-menu-fill');
          menuToggle.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
        });
  
        document.addEventListener('click', (event) => {
          const target = event.target;
          if (!(target instanceof Node) || (!navMenu.contains(target) && !menuToggle.contains(target))) {
            navMenu.classList.remove('active');
            menuIcon.setAttribute('class', 'ri-menu-fill');
          }
        });
      }
    }
  </script>
  
  
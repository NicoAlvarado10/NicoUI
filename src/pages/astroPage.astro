<Layout title="NicoUI | Astro">
    <section class="max-w-7xl m-auto pt-24 max-xl:px-5 max-sm:px-0 ">

      <aside class="float-left mt-8 fixed h-full top-26 max-xl:hidden ">
        <ul class="flex flex-col gap-2">
            <li><a class="text-gray-400 transition duration-150 hover:text-white" href="#buttonAstro">Button</a></li>
            <li><a class="text-gray-400 transition duration-150 hover:text-white" href="#cardAstro">Card</a></li>
            <li><a class="text-gray-400 transition duration-150 hover:text-white" href="#inputAstro">Input</a></li>
            <li><a class="text-gray-400 transition duration-150 hover:text-white" href="#alertAstro">Alert</a></li>
            <li><a class="text-gray-400 transition duration-150 hover:text-white" href="#formAstro">Form</a></li>
            <li><a class="text-gray-400 transition duration-150 hover:text-white" href="#tableAstro">Table</a></li>
        </ul>
    </aside>

        <DocsLayout
          guia="npm create astro@latest"
          framework="Astro"
          icon="ri-code-view"
        />

        <section class="flex flex-col justify-center max-w-4xl m-auto gap-4 mt-24 scroll-mt-48 max-sm:px-3"  id="buttonAstro" >
            <h2 class="text-white text-2xl font-semibold pb-5 ">Botones</h2>
           <ComponentsLayout client:visible Component={PrimaryButton} Copy={buttonPrimaryAstro} Code={buttonPrimaryAstro}/>
           
           <ComponentsLayout client:visible Component={SecondaryButton} Copy={buttonSecondaryAstro}  Code={buttonSecondaryAstro}/>
           <ComponentsLayout client:visible Component={ThirdButton} Copy={buttonWarningAstro} Code={buttonWarningAstro}/>
        </section>
  
        <section class="flex flex-col justify-center max-w-4xl m-auto gap-4 mt-24 max-sm:px-3" id="cardAstro">
            <h2 class="text-white text-2xl font-semibold pb-5">Cards</h2>
           <ComponentsLayout client:visible Component={PrimaryCard } Code={primaryCardAstro} Copy={primaryCardAstro}/>
           <ComponentsLayout client:visible Component={SecondaryCard} Code={secondaryCardAstro} Copy={secondaryCardAstro}/>
           <ComponentsLayout client:visible Component={ThirdCard} Code={thirdCardAstro} Copy={thirdCardAstro}/>
          </section>
  
          <section class="flex flex-col justify-center max-w-4xl m-auto gap-4 mt-24 max-sm:px-3" id="inputAstro">
            <h2 class="text-white text-2xl font-semibold pb-5">Inputs</h2>
           <ComponentsLayout client:visible Component={PrimaryInput } Code={primaryInputAstro} Copy={primaryInputAstro}/>
           <ComponentsLayout client:visible Component={SecondaryInput} Code={secondaryInputAstro} Copy={secondaryInputAstro}/>
          
          </section>

          <section class="flex flex-col justify-center max-w-4xl m-auto gap-4 mt-24 max-sm:px-3" id="alertAstro">
            <h2 class="text-white text-2xl font-semibold pb-5">Alert</h2>
           <ComponentsLayout client:visible Component={Alert } Code={primaryAlertAstro} Copy={primaryAlertAstro}/>
          
          </section>
  
          <section class="flex flex-col justify-center max-w-4xl m-auto gap-4 mt-24 max-sm:px-3" id="formAstro">
            <h2 class="text-white text-2xl font-semibold pb-5">Forms</h2 >
           <ComponentsLayout client:visible Component={PrimaryForm } Code={primaryFormAstro} Copy={primaryFormAstro}/>
           <ComponentsLayout client:visible Component={SecondaryForm } Code={secondaryFormAstro} Copy={secondaryFormAstro}/>
           <ComponentsLayout client:visible Component={ThirdForm } Code={thirdFormAstro} Copy={thirdFormAstro}/>
          
          </section>

          <section class="flex flex-col justify-center max-w-4xl m-auto gap-4 mt-24 max-sm:px-3" id="tableAstro">
            <h2 class="text-white text-2xl font-semibold pb-5">Tables</h2>
           <ComponentsLayout client:visible Component={PrimaryTable } Code={primaryTableAstro} Copy={primaryTableAstro}/>
           <ComponentsLayout client:visible Component={SecondaryTable } Code={secondaryTableAstro} Copy={secondaryTableAstro}/>
       
          
          </section>
    </section>
</Layout>

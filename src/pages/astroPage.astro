            <li><a class="text-gray-400 transition duration-150 hover:text-white" href="#checkboxAstro">Checkbox</a></li>
          </ul>
    </aside>

        <DocsLayout
          guia="npm create astro@latest"
          framework="Astro"
          icon="ri-code-view"
          anteriorPage="/docs"
        />

        <section class="flex flex-col justify-center max-w-4xl m-auto gap-4 mt-24 scroll-mt-48 max-sm:px-3"  id="buttonAstro" >
            <h2 class="text-white text-2xl font-semibold pb-5 ">Botones</h2>
           <ComponentsLayout  Component={PrimaryButton} Copy={buttonPrimaryAstro} Code={buttonPrimaryAstro}/>
           
           <ComponentsLayout  Component={SecondaryButton} Copy={buttonSecondaryAstro}  Code={buttonSecondaryAstro}/>
           <ComponentsLayout  Component={ThirdButton} Copy={buttonWarningAstro} Code={buttonWarningAstro}/>
        </section>
  
        <section class="flex flex-col justify-center max-w-4xl m-auto gap-4 mt-24 max-sm:px-3" id="cardAstro">
            <h2 class="text-white text-2xl font-semibold pb-5">Cards</h2>
           <ComponentsLayout  Component={PrimaryCard } Code={primaryCardAstro} Copy={primaryCardAstro}/>
           <ComponentsLayout  Component={SecondaryCard} Code={secondaryCardAstro} Copy={secondaryCardAstro}/>
           <ComponentsLayout  Component={ThirdCard} Code={thirdCardAstro} Copy={thirdCardAstro}/>
          </section>
  
          <section class="flex flex-col justify-center max-w-4xl m-auto gap-4 mt-24 max-sm:px-3" id="inputAstro">
            <h2 class="text-white text-2xl font-semibold pb-5">Inputs</h2>
           <ComponentsLayout  Component={PrimaryInput } Code={primaryInputAstro} Copy={primaryInputAstro}/>
           <ComponentsLayout  Component={SecondaryInput} Code={secondaryInputAstro} Copy={secondaryInputAstro}/>
          
          </section>

          <section class="flex flex-col justify-center max-w-4xl m-auto gap-4 mt-24 max-sm:px-3" id="alertAstro">
            <h2 class="text-white text-2xl font-semibold pb-5">Alert</h2>
           <ComponentsLayout  Component={Alert } Code={primaryAlertAstro} Copy={primaryAlertAstro}/>
          
          </section>
  
          <section class="flex flex-col justify-center max-w-4xl m-auto gap-4 mt-24 max-sm:px-3" id="formAstro">
            <h2 class="text-white text-2xl font-semibold pb-5">Forms</h2 >
           <ComponentsLayout  Component={PrimaryForm } Code={primaryFormAstro} Copy={primaryFormAstro}/>
           <ComponentsLayout  Component={SecondaryForm } Code={secondaryFormAstro} Copy={secondaryFormAstro}/>
           <ComponentsLayout  Component={ThirdForm } Code={thirdFormAstro} Copy={thirdFormAstro}/>
          
          </section>

          <section class="flex flex-col justify-center max-w-4xl m-auto gap-4 mt-24 max-sm:px-3" id="tableAstro">
            <h2 class="text-white text-2xl font-semibold pb-5">Tables</h2>
           <ComponentsLayout  Component={PrimaryTable } Code={primaryTableAstro} Copy={primaryTableAstro}/>
           <ComponentsLayout  Component={SecondaryTable } Code={secondaryTableAstro} Copy={secondaryTableAstro}/>
       
          
